# Variables de entorno para el proyecto SOLID

# Puerto del servidor
PORT=3001

# Configuración JWT
JWT_SECRET=mi-clave-secreta-super-segura-para-jwt-2024
JWT_EXPIRES_IN=24h

# Configuración de la base de datos (para futuras implementaciones)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=solid_demo
DB_USER=postgres
DB_PASSWORD=password

# Configuración del entorno
NODE_ENV=development

# Configuración de CORS
CORS_ORIGIN=http://localhost:3001

# Configuración de logging
LOG_LEVEL=info

# Variables adicionales para Vercel (configurar en dashboard)
# JWT_SECRET=generar-con-crypto-randomBytes-32-base64
